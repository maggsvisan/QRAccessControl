    private void btnUpdateRecordActionPerformed(java.awt.event.ActionEvent evt) {                                                
      // TODO add your handling code here:
    String first = textFirstName.getText( );
    String last = textLastName.getText( );  
    String job = textJobTitle.getText( );
    String ID = textID.getText( );
    int newID = Integer.parseInt(ID);
    try {
     rs.updateInt( "IDENTIFICACIÓN", newID );
     rs.updateString( "PRIMERNOMBRE", first );
     rs.updateString( "APELLIDO", last );
     rs.updateString( "POSICION", job );
     rs.updateRow( );
     JOptionPane.showMessageDialog(Trabajadores.this, "Updated");
    }
    catch (SQLException err) {
     System.out.println(err.getMessage() );
    }


    
    }                                               

    private void btnNewRecordActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
        try
        {
        curRow = rs.getRow();
        
        textFirstName.setText("");
        textLastName.setText("");
        textJobTitle.setText("");
        textID.setText("");
        //Creo que se tiene que cambiar pero no estoy seguro, de hecho ya vi y
        //no se cambia asi que todo
        //está bien
        
        
        btnFirst.setEnabled(false);
        btnPrevious.setEnabled(false);
        btnNext.setEnabled(false);
        btnLast.setEnabled(false);
        btnUpdateRecord.setEnabled(false);
        btnDeleteRecord.setEnabled(false);
        btnNewRecord.setEnabled(false);
        btnSaveRecord.setEnabled(true);
        btnCancelNewRecord.setEnabled(true);
        }
        catch (SQLException err)
        {
          JOptionPane.showMessageDialog(this, err.getMessage());
        }
        
        
    }                                            

    private void btnCancelNewRecordActionPerformed(java.awt.event.ActionEvent evt) {                                                   
        // TODO add your handling code here:
       try
       {
        rs.absolute(curRow);
        
        textFirstName.setText( rs.getString("PRIMERNOMBRE") );
        textLastName.setText( rs.getString("APELLIDO") );
        textJobTitle.setText( rs.getString("POSICION") );
        textID.setText( Integer.toString( rs.getInt("IDENTIFICACIÓN" )) );
        
        
        btnFirst.setEnabled(true);
        btnPrevious.setEnabled(true);
        btnNext.setEnabled(true);
        btnLast.setEnabled(true);
        btnUpdateRecord.setEnabled(true);
        btnDeleteRecord.setEnabled(true);
        btnNewRecord.setEnabled(true);
        btnSaveRecord.setEnabled(false);
        btnCancelNewRecord.setEnabled(false);
       }
       catch (SQLException err)
       {
           JOptionPane.showMessageDialog(this, err.getMessage());
       }
    }                                                  

    private void btnSaveRecordActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:
        
        String first = textFirstName.getText();
        String last = textLastName.getText( );  
        String job = textJobTitle.getText( );
        String ID = textID.getText( );
        int newID = Integer.parseInt(ID);
        
        
        try
        {
            
            curRow= rs.getRow();
            rs.absolute(curRow);
            rs.moveToInsertRow();
           

            rs.updateInt("IDENTIFICACIÓN", newID);
            rs.updateString("PRIMERNOMBRE", first);
            rs.updateString("APELLIDO", last);
            rs.updateString("POSICION", job);
            

            rs.insertRow( );
            
            stmnt.close( );
            rs.close( );
            
            stmnt = con.createStatement(ResultSet.TYPE_SCROLL_SENSITIVE,
                    ResultSet.CONCUR_UPDATABLE);

            String sql = "SELECT * FROM Trabajadores";
            rs = stmnt.executeQuery(sql);

            rs.next( );
            int id_col = rs.getInt("IDENTIFICACIÓN");
            String id = Integer.toString(id_col);
            String first2 = rs.getString("PRIMERNOMBRE");
            String last2 = rs.getString("APELLIDO");
            String job2 = rs.getString("POSICION");

            textID.setText(id);
            textFirstName.setText(first2);
            textLastName.setText(last2);
            textJobTitle.setText(job2);
            
            btnFirst.setEnabled(true);
            btnPrevious.setEnabled(true);
            btnNext.setEnabled(true);
            btnLast.setEnabled(true);
            btnUpdateRecord.setEnabled(true);
            btnDeleteRecord.setEnabled(true);
            btnNewRecord.setEnabled(true);
            btnSaveRecord.setEnabled(false);
            btnCancelNewRecord.setEnabled(false);
            
            JOptionPane.showMessageDialog(this, "Record Saved");
            
            
        }
        
        catch(SQLException err)
        {
            JOptionPane.showMessageDialog(this, err.getMessage());
        }
        
        
    }                                             

    private void btnDeleteRecordActionPerformed(java.awt.event.ActionEvent evt) {                                                
        // TODO add your handling code here:
        
        try{
            rs.deleteRow();
            stmnt.close();
            rs.close();
            stmnt = con.createStatement(ResultSet.TYPE_SCROLL_INSENSITIVE,
                    ResultSet.CONCUR_UPDATABLE);
            
            String SQL = "SELECT * FROM TRABAJADORES";
            rs = stmnt.executeQuery(SQL);
            
            rs.next();
            
            int id_col = rs.getInt("IDENTIFICACIÓN");
            String id = Integer.toString(id_col);
            String first_name = rs.getString("PRIMERNOMBRE");
            String last_name = rs.getString("APELLIDO");
            String job = rs.getString("POSICION");
            
            textID.setText(id);
            textFirstName.setText(first_name);
            textLastName.setText(last_name);
            textJobTitle.setText(job);
            
            JOptionPane.showMessageDialog(this, "Record Deleted");
        }
        
        catch(SQLException err)
        {
            JOptionPane.showMessageDialog(this, err.getMessage());
        }
    }                                               

    private void HoraLlegadaActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        Calendar cal = Calendar.getInstance();
        SimpleDateFormat sdf = new SimpleDateFormat("HH:mm:ss");
        String fechaLlegada = sdf.toString();
        String fecha1 = sdf.format(cal.getTime());
        MuestraHoraLlegada.setText(fecha1);
        HoraSalida.setEnabled(true);
        HoraLlegada.setEnabled(false);
        
        
    }                                           

    private void HoraSalidaActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        
        Calendar cal = Calendar.getInstance();
        SimpleDateFormat sdf = new SimpleDateFormat("HH:mm:ss");
        String fechaLlegada = sdf.toString();
        String fecha1 = sdf.format(cal.getTime());
        muestraHoraSalida.setText(fecha1);
        HoraSalida.setEnabled(false);
    }                                          

