    private void btnNextActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        
        try 
        {
            if(rs.next())
            {
                 int id_col = rs.getInt("IDENTIFICACIÓN");
                String id = Integer.toString(id_col);
                String first_name = rs.getString ("PRIMERNOMBRE");
                String last_name = rs.getString ("APELLIDO");
                String job = rs.getString("POSICION");
                
                textID.setText(id);
                textFirstName.setText(first_name);
                textLastName.setText(last_name);
                textJobTitle.setText(job);
            }
            else
            {
                rs.previous();
                JOptionPane.showMessageDialog(Trabajadores.this, "End of File");
            }
        }
        catch(SQLException err)
        {
            JOptionPane.showMessageDialog(Trabajadores.this, err.getMessage());
        }
    }                                       

    private void btnPreviousActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        try 
        {
            if(rs.previous())
            {
                 int id_col = rs.getInt("IDENTIFICACIÓN");
                String id = Integer.toString(id_col);
                String first_name = rs.getString ("PRIMERNOMBRE");
                String last_name = rs.getString ("APELLIDO");
                String job = rs.getString("POSICION");
                
                textID.setText(id);
                textFirstName.setText(first_name);
                textLastName.setText(last_name);
                textJobTitle.setText(job);
            }
            else
            {
                rs.next();
                JOptionPane.showMessageDialog(Trabajadores.this, "Start of File");
            }
        }
        catch(SQLException err)
        {
            JOptionPane.showMessageDialog(Trabajadores.this, err.getMessage());
        }
        
    }                                           

    private void btnFirstActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
